<div class="row">
  <div class="col-6 col-xs-12 mx-auto">
    <div class="form-head w-50 mx-auto mt-5">
      <p class="text-center">Fotobook Signup</p>
      <div class="Signup-icon mb-3 border rounded-lg ">
        <div class="row">
          <div class="col-4 col-xs-8">
            <a href="#"><img src="/assets/google.jpg" class="rounded-circle m-3"></a>
          </div>
          <div class="col-4 col-xs-8">
            <a href="#"><img src="/assets/facebook.png" class="rounded-circle m-3"></a>
          </div>
          <div class="col-4 col-xs-8">
            <a href="#"><img src="/assets/twitter.jfif" class="rounded-circle m-3"></a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-body w-75 mx-auto rounded-lg mt-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :firstname,"First Name" %><br />
            <%= f.text_field :firstname,autofocus:true,autocomplete:"firstname",class:"rounded-lg",style:"width:100%;height:40px",placeholder:"First Name"%>
          </div>
          <div class="field">
            <%= f.label :lasttname,"Last Name" %><br />
            <%= f.text_field :lasttname, autocomplete: "lastname", class:"rounded-lg", style: "width:100%; height:40px",placeholder:"Last Name"%>
          </div>
          <div class="field">
            <%= f.label :email,"Email" %><br />
            <%= f.email_field :email, autocomplete: "email", class:"rounded-lg", style: "width:100%; height:40px",placeholder:"Email"%>
          </div>
          <div class="field">
            <%= f.label :password ,"New Password"%>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"rounded-lg", style: "width:100%; height:40px",placeholder:"Password"%>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"rounded-lg", style: "width:100%; height:40px",placeholder:"Password"%>
          </div>
          <div class="actions text-center mt-2">
            <%= f.submit "Sign up", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>