<div class="row">
  <div class="col-6 col-xs-12 mx-auto">
    <div class="form-head w-50 mx-auto mt-1">
      <p class="text-center">Fotobook Login</p>
      <div class="Signin-icon mb-3 border rounded-lg ">
        <div class="row">
          <div class="col-4 col-xs-8">
            <a href="#"><img src="/assets/google.jpg" class="rounded-circle m-3"></a>
          </div>
          <div class="col-4 col-xs-8">
            <a href="#"><img src="/assets/facebook.png" class="rounded-circle m-3"></a>
          </div>
          <div class="col-4 col-xs-8">
            <a href="#"><img src="/assets/twitter.jfif" class="rounded-circle m-3"></a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-body w-50 mx-auto">
        <img class="profile-img mt-2" src="/assets/profile.png">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field ">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field ">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <% if devise_mapping.rememberable? %>
            <div class="field ">
              <br /><%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end %>
            <div class="actions text-center">
              <button class="bg-primary"><%= f.submit "Log in" %></button>
            </div>
            <div class="text-center mt-2">
              <%= link_to "Forgot password?", new_password_path(resource_name) %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to "Create an account", new_registration_path(resource_name) %>
      </div>
    </div>
  </div>
</div>